<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exams.ExamsFragment">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="395dp"
        android:layout_height="441dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="274dp" />

    <TextView
        android:id="@+id/Exam_name"
        android:layout_width="109dp"
        android:layout_height="25dp"
        android:layout_marginStart="148dp"
        android:ems="10"
        android:hint="Exam name"
        android:inputType="text"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/exam_date"
        android:layout_width="106dp"
        android:layout_height="24dp"
        android:layout_marginStart="148dp"
        android:ems="10"
        android:hint="Exam Date"
        android:inputType="text"
        android:minHeight="48dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="89dp" />

    <Button
        android:id="@+id/Add_Exam"
        android:layout_width="399dp"
        android:layout_height="44dp"
        android:text="Add Exam"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="140dp" />

    <TextView
        android:id="@+id/Exam_Location"
        android:layout_width="137dp"
        android:layout_height="27dp"
        android:ems="10"
        android:hint="Exam Location"
        android:inputType="date"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="113dp" />

    <TextView
        android:id="@+id/exam_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Exams"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>