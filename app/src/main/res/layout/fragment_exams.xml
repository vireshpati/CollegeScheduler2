<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exams.ExamsFragment">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Add_Exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Exam"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="3dp" />

    <TextView
        android:id="@+id/Exam_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="199dp"
        android:ems="10"
        android:textSize="20dp"
        android:hint="Exam name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="403dp"
        android:layout_height="619dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="103dp" />

    <TextView
        android:id="@+id/exam_date"
        android:layout_width="165dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:textSize="20dp"
        android:hint="Exam Date"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Exam_name" />

    <TextView
        android:id="@+id/Exam_class"
        android:layout_width="164dp"
        android:layout_height="30dp"
        android:ems="10"
        android:textSize="20dp"
        android:hint="Exam CLass"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/exam_date"
        tools:layout_editor_absoluteX="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>